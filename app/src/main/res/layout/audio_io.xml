<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/seek_min_frequency"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/seek_max_frequency"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/seek_time"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/seek_words"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/seek_filter"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/seek_iteration"
            layout="@layout/my_seeker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>


        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<Button-->
                    <!--android:id="@+id/button_spectrum_analyzer"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Spectrum Analyzer"-->
                    <!--android:textAllCaps="false"/>-->



                <Button
                    android:id="@+id/button_send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Text"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/workingForReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working For Real: ???"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capturing:"/>

            <TextView
                android:id="@+id/outputCapturingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>



    </LinearLayout>
</ScrollView>